<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_navigation"
    app:startDestination="@id/home_dest">


    <fragment
        android:id="@+id/home_dest"
        android:name="com.example.navigationdemo.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment" />

    <fragment
        android:id="@+id/flow_step_one_dest"
        android:name="com.example.navigationdemo.FlowStepFragment"
        android:label="FlowStepFragment">
        <argument
            android:name="flowStepNumber"
            android:defaultValue="1"
            app:argType="integer" />

        <action
            android:id="@+id/next_action"
            app:destination="@+id/flow_step_two_dest" />

    </fragment>

    <fragment
        android:id="@+id/flow_step_two_dest"
        android:name="com.example.navigationdemo.FlowStepFragment"
        android:label="FlowStepFragment">


        <argument
            android:name="flowStepNumber"
            android:defaultValue="2"
            app:argType="integer" />

        <action
            android:id="@+id/next_action"
            app:popUpTo="@id/home_dest" />

    </fragment>
    <fragment
        android:id="@+id/deeplink_dest"
        android:name="com.example.navigationdemo.DeepLinkFragment"
        android:label="DeepLinkFragment">
        <argument
            android:name="myarg"
            android:defaultValue="Android!" />
    </fragment>


</navigation>