<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/tip1"
        android:text="Spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline1"
        style="@style/text_tip"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_3"
        android:gravity="center"
        android:text="A"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv2"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintWidth_min="60dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_4"
        android:gravity="center"
        android:text="B"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv3"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintWidth_min="60dp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_6"
        android:gravity="center"
        android:text="C"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintWidth_min="60dp" />

    <TextView
        android:id="@+id/tip12"
        android:text="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        style="@style/text_tip"/>

    <TextView
        android:id="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_3"
        android:gravity="center"
        android:text="A"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv22"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintWidth_min="60dp" />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_4"
        android:gravity="center"
        android:text="B"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv32"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv12"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintWidth_min="80dp" />

    <TextView
        android:id="@+id/tv32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_6"
        android:gravity="center"
        android:text="C"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv22"
        app:layout_constraintTop_toTopOf="@id/guideline2"
        app:layout_constraintWidth_min="100dp" />

    <TextView
        android:id="@+id/tip13"
        android:text="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline3"
        style="@style/text_tip"/>

    <TextView
        android:id="@+id/tv13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_3"
        app:layout_constraintHorizontal_bias="0.2"
        android:gravity="center"
        android:text="A"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv23"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintWidth_min="60dp" />

    <TextView
        android:id="@+id/tv23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_4"
        android:gravity="center"
        android:text="B"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv33"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv13"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintWidth_min="80dp" />

    <TextView
        android:id="@+id/tv33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_6"
        android:gravity="center"
        android:text="C"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv23"
        app:layout_constraintTop_toTopOf="@id/guideline3"
        app:layout_constraintWidth_min="100dp" />

    <TextView
        android:id="@+id/tip14"
        android:text="Spread chain weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline4"
        style="@style/text_tip"/>

    <TextView
        android:id="@+id/tv14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_3"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="1"
        android:text="A"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv24"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline4" />

    <TextView
        android:id="@+id/tv24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_4"
        app:layout_constraintHorizontal_weight="2"
        android:gravity="center"
        android:text="B"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@id/tv34"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv14"
        app:layout_constraintTop_toTopOf="@id/guideline4" />

    <TextView
        android:id="@+id/tv34"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/color_6"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="3"
        android:text="C"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="60dp"
        app:layout_constraintStart_toEndOf="@id/tv24"
        app:layout_constraintTop_toTopOf="@id/guideline4" />

</androidx.constraintlayout.widget.ConstraintLayout>