<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7.5dp"
    android:layout_marginTop="7.5dp"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/chat_time_margin"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorContentColor"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/chat_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_content_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                        android:id="@+id/message_status"
                        android:layout_width="@dimen/message_status_size"
                        android:layout_height="@dimen/message_status_size"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/message_status_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/message_send_fail" />

                <ProgressBar
                        android:id="@+id/message_sending"
                        android:layout_width="@dimen/message_status_size"
                        android:layout_height="@dimen/message_status_size"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/message_status_margin" />

                <RelativeLayout
                    android:id="@+id/image_data_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_user_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:gravity="center_vertical"
                        android:maxHeight="200dp"
                        android:maxWidth="200dp"
                        android:scaleType="centerCrop" />

                    <View
                        android:id="@+id/video_un_download_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="#20000000" />

                    <ImageView
                        android:id="@+id/video_play_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="false"
                        android:src="@drawable/play_icon" />

                    <TextView
                        android:id="@+id/video_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/iv_user_image"
                        android:layout_alignRight="@id/iv_user_image"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#05000000"
                        android:padding="2dp"
                        android:textColor="#fff"
                        android:textSize="10sp" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>