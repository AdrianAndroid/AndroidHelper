<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/chat_item_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="7.5dp"
              android:layout_marginTop="7.5dp"
              android:clickable="true"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">


    <TextView
        android:id="@+id/chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/chat_time_margin"
        android:clickable="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorContentColor"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/chat_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="30dp"
        android:clickable="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/ll_content_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                        android:id="@+id/message_status"
                        android:layout_width="@dimen/message_status_size"
                        android:layout_height="@dimen/message_status_size"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/message_status_margin"
                        android:scaleType="fitCenter"
                        android:src="@drawable/message_send_fail" />

                <ProgressBar
                        android:id="@+id/message_sending"
                        android:layout_width="@dimen/message_status_size"
                        android:layout_height="@dimen/message_status_size"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/message_status_margin" />

                <RelativeLayout
                    android:id="@+id/ll_msg_data_group"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:minWidth="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/unread_flag"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/audio_unread_flag_icon"
                        android:visibility="gone"
                        tools:visibility="visible"/>


                    <ImageView
                        android:id="@+id/audio_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="10dp"
                        android:rotation="180"
                        android:scaleType="centerCrop"
                        android:src="@drawable/voice_msg_playing_3" />

                    <TextView
                        android:id="@+id/audio_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/audio_play"
                        android:textColor="@color/colorTitleColor"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>