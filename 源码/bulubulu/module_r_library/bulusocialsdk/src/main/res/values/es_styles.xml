<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SocialOauthActivity" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ShareWebTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">@dimen/shareweb_marginleft</item>
        <item name="android:layout_marginRight">@dimen/shareweb_marginright</item>
    </style>


</resources>