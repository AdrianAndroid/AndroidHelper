<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/dialog_round_black_bg"
    android:orientation="vertical">


    <TextView
        style="@style/ShareWebTitle"
        android:text="@string/shareweb_title_pic" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/shareweb_marginleft"
        android:paddingRight="@dimen/shareweb_marginright"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_share_2" />


    <TextView
        style="@style/ShareWebTitle"
        android:text="@string/shareweb_title_link" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/shareweb_marginleft"
        android:paddingRight="@dimen/shareweb_marginright"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_share_2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>