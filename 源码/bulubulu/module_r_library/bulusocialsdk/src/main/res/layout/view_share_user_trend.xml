<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="wrap_content"
    android:minHeight="690dp">

    <LinearLayout
        android:id="@+id/layout_preview_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_bulu_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BULUBULU"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivUserHeader"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/oval"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_preview_top"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名字"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivUserHeader"
        app:layout_constraintLeft_toLeftOf="@+id/ivUserHeader"
        app:layout_goneMarginTop="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="内容"
        android:textColor="#424242"
        android:textSize="16sp"
        android:ellipsize="end"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_image"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="@id/tvContent"
        app:layout_constraintTop_toBottomOf="@id/tvContent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_bulu_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/viewBottom"
        app:layout_constraintTop_toTopOf="@+id/viewBottom"/>

    <ImageView
        android:id="@+id/ivQr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download_app_qr"
        app:layout_constraintBottom_toBottomOf="@+id/viewBottom"
        app:layout_constraintRight_toRightOf="@+id/viewBottom" />

    <TextView
        android:id="@+id/tvTip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="来bulubulu"
        android:textColor="@color/black_66"
        android:textSize="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@+id/ivQr"
        app:layout_constraintTop_toTopOf="@+id/ivQr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="找到志同道合的小伙伴"
        android:textColor="@color/black_66"
        android:textSize="10dp"
        app:layout_constraintRight_toLeftOf="@+id/ivQr"
        app:layout_constraintTop_toBottomOf="@+id/tvTip1"/>

</androidx.constraintlayout.widget.ConstraintLayout>