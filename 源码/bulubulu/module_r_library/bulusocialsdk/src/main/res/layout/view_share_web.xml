<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_web"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_bulu_icon"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/viewBottom"
        app:layout_constraintTop_toTopOf="@+id/viewBottom"/>

    <ImageView
        android:id="@+id/ivQr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download_app_qr"
        app:layout_constraintBottom_toBottomOf="@+id/viewBottom"
        app:layout_constraintRight_toRightOf="@+id/viewBottom" />

    <TextView
        android:id="@+id/tvTip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="来bulubulu"
        android:textColor="@color/black_66"
        android:textSize="10dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@+id/ivQr"
        app:layout_constraintTop_toTopOf="@+id/ivQr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="找到志同道合的小伙伴"
        android:textColor="@color/black_66"
        android:textSize="10dp"
        app:layout_constraintRight_toLeftOf="@+id/ivQr"
        app:layout_constraintTop_toBottomOf="@+id/tvTip1"/>

</androidx.constraintlayout.widget.ConstraintLayout>