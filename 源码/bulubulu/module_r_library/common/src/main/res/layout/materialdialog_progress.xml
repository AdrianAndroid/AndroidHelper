<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/materialdialog_showloading_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ProgressBar
        android:layout_width="@dimen/materialdialog_showloading_progressbar_height"
        android:layout_height="@dimen/materialdialog_showloading_progressbar_height"
        android:indeterminateTint="#0000ff"
        android:indeterminateTintMode="src_atop" />

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/progressTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="正在加载..."
        android:textColor="#222222"
        android:textSize="@dimen/materialdialog_showloading_textsize" />

</LinearLayout>