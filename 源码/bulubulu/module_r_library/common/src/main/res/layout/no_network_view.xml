<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/no_network_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/net_error"/>

        <TextView
            android:id="@+id/no_network_view_tv"
            style="@style/MultipleStatusView.Content"
            android:layout_marginTop="3dp"
            android:text="@string/no_network_view_hint"/>

        <com.rey.material.widget.Button
            android:id="@+id/no_network_retry_view"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/btn_corners_24_bg"
            android:gravity="center"
            android:text="再试一下"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rd_cornerRadius="24dp"
            app:rd_enable="true"
            app:rd_rippleColor="@color/colorControlHighlight"/>
    </LinearLayout>
</RelativeLayout>