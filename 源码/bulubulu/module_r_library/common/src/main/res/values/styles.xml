<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    O

    <style name="DialogStyle" parent="Material.App.Dialog.Simple">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item><!--除去背景色-->
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>  <!--Appbar背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item>  <!--控制各个控件被选中时的颜色-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>  <!--Appbar背景色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item>  <!--控制各个控件被选中时的颜色-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="InputBottomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible
        </item><!--显示软件盘,还能解决dialog隐藏软键盘依然显示的问题-->
    </style>

    <!--直角矩形-->
    <style name="btn_style_raise_reg" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_default_reg</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
        <item name="rd_enable">true</item>
    </style>
    <!--圆角选中色矩形-->
    <style name="btn_style_raise_rect" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/btn_default_enable</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">0dp</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
        <item name="rd_cornerRadius">@dimen/btn_corner</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="rd_enable">true</item>
    </style>
    <!--圆角矩形, 无背景-->
    <style name="btn_style_flat_rect_radio" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rd_cornerRadius">@dimen/btn_corner</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="rd_enable">true</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
    </style>

    <!--直角矩形, 无背景-->
    <style name="btn_style_flat_rect" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="rd_cornerRadius">@dimen/btn_corner</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="rd_enable">true</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
    </style>

    <style name="ripple_image_style" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="rd_enable">true</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
    </style>

    <style name="ripple_enable" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_enable">true</item>
        <item name="rd_rippleColor">@color/colorControlHighlight</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">29sp</item>
        <item name="navigationIcon">@drawable/toolbar_back_icon</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
