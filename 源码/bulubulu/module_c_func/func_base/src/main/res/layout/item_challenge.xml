<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/rect_top_corners_10dp_bg">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/white_color"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintDimensionRatio="h,375:333"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,187.5:333"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/viewOptionOneBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvOptionOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#413408"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="4"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivOptionOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/viewAnswerOnePercent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerOnePercent">

                        <ImageView
                            android:id="@+id/ivAnswerOneCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tvAnswerOnePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="24sp"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,187.5:333"
                app:layout_constraintLeft_toRightOf="@id/layoutContentOne"
                app:layout_constraintTop_toTopOf="@id/layoutContentOne">

                <RelativeLayout
                    android:id="@+id/viewOptionTwoBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvOptionTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#051D2E"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="4"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivOptionTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/viewAnswerTwoPercent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerTwoPercent">

                        <ImageView
                            android:id="@+id/ivAnswerTwoCheck"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/tvAnswerTwoPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="24sp"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivUserHeader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/oval"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewContent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="用户名字"
        android:textColor="@color/white_alpha_50"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="7dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@id/ivUserHeader"
        app:layout_constraintRight_toLeftOf="@+id/ivShare"
        app:layout_constraintBottom_toBottomOf="@id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"/>

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/question_bg_music_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

    <ImageView
        android:id="@+id/ivPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:src="@drawable/question_prise"
        app:layout_constraintRight_toLeftOf="@+id/ivMusic"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:src="@drawable/question_danmu"
        app:layout_constraintRight_toLeftOf="@+id/ivPraise"
        app:layout_constraintTop_toTopOf="@+id/ivPraise"
        app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:src="@drawable/question_share"
        app:layout_constraintRight_toLeftOf="@+id/ivComment"
        app:layout_constraintTop_toTopOf="@+id/ivComment"
        app:layout_constraintBottom_toBottomOf="@+id/ivComment" />

</androidx.constraintlayout.widget.ConstraintLayout>
