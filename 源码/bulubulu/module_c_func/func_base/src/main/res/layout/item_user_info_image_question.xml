<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#37393A">

    <androidx.cardview.widget.CardView
        android:id="@+id/viewStartPoint"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="27dp"
        app:cardBackgroundColor="#FFE43F"
        app:cardCornerRadius="3.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/viewTopLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/white_alpha_10"
        app:layout_constraintLeft_toLeftOf="@+id/viewStartPoint"
        app:layout_constraintRight_toRightOf="@+id/viewStartPoint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewStartPoint"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/white_alpha_10"
        app:layout_constraintLeft_toLeftOf="@+id/viewStartPoint"
        app:layout_constraintRight_toRightOf="@+id/viewStartPoint"
        app:layout_constraintTop_toBottomOf="@+id/viewStartPoint"
        app:layout_constraintBottom_toTopOf="@+id/viewBottomLine"
        />

    <TextView
        android:id="@+id/tvPublishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间"
        android:textColor="@color/white_alpha_30"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/viewStartPoint"
        app:layout_constraintTop_toTopOf="@+id/viewStartPoint"
        app:layout_constraintBottom_toBottomOf="@+id/viewStartPoint" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mine_delete_trend"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPublishTime"
        app:layout_constraintBottom_toBottomOf="@+id/tvPublishTime"/>

    <com.koudai.styletextview.RichTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvPublishTime"
        app:layout_constraintLeft_toLeftOf="@+id/tvPublishTime"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:maxWidth="300dp"
        android:text="标题"
        android:textColor="@color/white_alpha_60"
        android:textStyle="bold"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="32.5dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintDimensionRatio="h,280.5:234"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,140.25:234"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivOptionOne"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/viewAnswerOnePercent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerOnePercent">

                        <TextView
                            android:id="@+id/tvAnswerOnePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="24sp"/>

                        <ImageView
                            android:id="@+id/ivAnswerOneCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,140.25:234"
                app:layout_constraintLeft_toRightOf="@id/layoutContentOne"
                app:layout_constraintTop_toTopOf="@id/layoutContentOne">

                <ImageView
                    android:id="@+id/ivOptionTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <FrameLayout
                    android:id="@+id/viewAnswerTwoPercent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerTwoPercent">

                        <TextView
                            android:id="@+id/tvAnswerTwoPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="24sp"/>

                        <ImageView
                            android:id="@+id/ivAnswerTwoCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>>

    <ImageView
        android:id="@+id/ivPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_praise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewContent" />

    <TextView
        android:id="@+id/tvCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white_alpha_30"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toLeftOf="@+id/ivPraise"
        app:layout_constraintTop_toTopOf="@+id/ivPraise"
        app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon_comment"
        app:layout_constraintRight_toLeftOf="@+id/tvCommentCount"
        app:layout_constraintTop_toTopOf="@+id/ivPraise"
        app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:src="@drawable/icon_share"
        app:layout_constraintRight_toLeftOf="@+id/ivComment"
        app:layout_constraintTop_toTopOf="@+id/ivComment"
        app:layout_constraintBottom_toBottomOf="@+id/ivComment" />

    <View
        android:id="@+id/viewBottomLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="70.5dp"
        android:layout_marginTop="18.5dp"
        app:layout_constraintTop_toBottomOf="@+id/ivPraise" />
</androidx.constraintlayout.widget.ConstraintLayout>
