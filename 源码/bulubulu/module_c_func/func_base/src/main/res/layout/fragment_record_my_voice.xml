<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.kuwo.common.view.CustomToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    </cn.kuwo.common.view.CustomToolbar>
    <TextView
        android:id="@+id/record_title"
        android:text="录制声音"
        style="@style/TextView_Title"
        android:textSize="41sp"
        android:textColor="@color/colorCommonHighlight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/record_time"
        android:text="00:00"
        style="@style/TextView_Title"
        android:textSize="41sp"
        android:textColor="@color/colorCommonHighlight"
        android:maxWidth="180dp"
        app:layout_constraintLeft_toRightOf="@id/record_title"
        app:layout_constraintTop_toTopOf="@id/record_title"
        app:layout_constraintBottom_toBottomOf="@id/record_title"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/record_desc"
        android:text="@string/record_desc"
        android:maxWidth="240dp"
        android:textColor="@color/colorCommonHighlight"
        android:textSize="16sp"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/record_title"
        app:layout_constraintTop_toBottomOf="@id/record_title"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <cn.kuwo.pp.util.LongPressProgressbar
        android:id="@+id/record_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_width="85dp"
        android:layout_height="85dp"/>
    <cn.kuwo.pp.util.IconFountTextView
        android:id="@+id/record_start_icon"
        app:layout_constraintLeft_toLeftOf="@id/record_start"
        app:layout_constraintRight_toRightOf="@id/record_start"
        app:layout_constraintTop_toTopOf="@id/record_start"
        app:layout_constraintBottom_toBottomOf="@id/record_start"
        android:text="e6d4;"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/record_finish"
        app:layout_constraintBottom_toBottomOf="@id/record_start"
        app:layout_constraintTop_toTopOf="@id/record_start"
        app:layout_constraintLeft_toRightOf="@id/record_start"
        android:layout_marginLeft="40dp"
        android:visibility="invisible"
        android:background="@drawable/circle_shape_bg"
        android:backgroundTint="@color/colorCommonHighlight"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <cn.kuwo.pp.util.IconFountTextView
        android:id="@+id/record_finish_icon"
        app:layout_constraintLeft_toLeftOf="@id/record_finish"
        app:layout_constraintRight_toRightOf="@id/record_finish"
        app:layout_constraintTop_toTopOf="@id/record_finish"
        app:layout_constraintBottom_toBottomOf="@id/record_finish"
        android:text="e6db;"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/record_cancel"
        app:layout_constraintBottom_toBottomOf="@id/record_start"
        app:layout_constraintTop_toTopOf="@id/record_start"
        app:layout_constraintRight_toLeftOf="@id/record_start"
        android:layout_marginRight="40dp"
        android:visibility="invisible"
        android:backgroundTint="@color/white"
        android:background="@drawable/circle_shape_bg"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <cn.kuwo.pp.util.IconFountTextView
        android:id="@+id/record_cancel_icon"
        app:layout_constraintLeft_toLeftOf="@id/record_cancel"
        app:layout_constraintRight_toRightOf="@id/record_cancel"
        app:layout_constraintTop_toTopOf="@id/record_cancel"
        app:layout_constraintBottom_toBottomOf="@id/record_cancel"
        android:text="e6da;"
        android:visibility="invisible"
        android:textColor="@color/colorAuxiliary2"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/record_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/record_desc"
        app:layout_constraintBottom_toTopOf="@id/record_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:layout_width="0dp"
        android:layout_height="280dp"></androidx.recyclerview.widget.RecyclerView>
    <cn.kuwo.common.view.MultipleStatusView
        android:id="@+id/record_status_view"
        app:layout_constraintLeft_toLeftOf="@id/record_recyclerview"
        app:layout_constraintTop_toTopOf="@id/record_recyclerview"
        app:layout_constraintRight_toRightOf="@id/record_recyclerview"
        app:layout_constraintBottom_toBottomOf="@id/record_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"></cn.kuwo.common.view.MultipleStatusView>
    <View
        android:id="@+id/record_loading_panel"
        android:background="#2D2D2D"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:id="@+id/record_loading_title"
              android:textSize="41sp"
              android:text="声音鉴定中…"
              android:layout_marginLeft="35dp"
              android:layout_marginTop="47dp"
              android:textColor="@color/colorCommonHighlight"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="@id/record_loading_panel"
              app:layout_constraintLeft_toLeftOf="@id/record_loading_panel"
              app:layout_constraintRight_toRightOf="@id/record_loading_panel"
    />
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_record_uploading"
            app:lottie_fileName="record_uploading_man_1.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="false"
            app:layout_constraintTop_toTopOf="@id/record_loading_panel"
            app:layout_constraintBottom_toBottomOf="@id/record_loading_panel"
            app:layout_constraintRight_toRightOf="@id/record_loading_panel"
            app:layout_constraintLeft_toLeftOf="@id/record_loading_panel"
            android:layout_marginBottom="30dp"
            android:layout_width="235dp"
            android:layout_height="315dp" />
    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_water"
            app:lottie_fileName="record_water.json"
            app:lottie_colorFilter="@color/colorHighlight"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintBottom_toBottomOf="@id/record_loading_panel"
            app:layout_constraintRight_toRightOf="@id/record_loading_panel"
            app:layout_constraintLeft_toLeftOf="@id/record_loading_panel"
            android:layout_width="0dp"
            android:layout_height="100dp" />
    <androidx.constraintlayout.widget.Group
            android:id="@+id/record_loading_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="anim_water,anim_record_uploading,record_loading_title,record_loading_panel" />
</androidx.constraintlayout.widget.ConstraintLayout>