<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/ivTitleBg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#0CFFE43F"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="15dp"
        android:text="取消"
        android:textColor="#6611383A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ivTitleBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTitleBg"/>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:text="确认"
        android:textColor="#CC11383A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ivTitleBg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTitleBg"/>

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wpProvince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wpCity"
        app:layout_constraintTop_toBottomOf="@id/ivTitleBg"
        app:wheel_item_space="30dp"
        app:wheel_item_text_color="@color/colorBirthdaySub"
        app:wheel_item_text_size="20sp"
        app:wheel_selected_item_text_color="@color/colorBirthday"
        app:wheel_atmospheric="true"
        app:wheel_visible_item_count="5"/>

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/wpCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/wpProvince"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTitleBg"
        app:wheel_item_space="30dp"
        app:wheel_atmospheric="true"
        app:wheel_item_text_color="@color/colorBirthdaySub"
        app:wheel_item_text_size="20sp"
        app:wheel_selected_item_text_color="@color/colorBirthday"
        app:wheel_visible_item_count="5"/>
</androidx.constraintlayout.widget.ConstraintLayout>