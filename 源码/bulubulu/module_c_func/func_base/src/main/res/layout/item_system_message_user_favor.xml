<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/chat_time_margin"
        android:paddingBottom="@dimen/chat_time_margin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorSubTitleColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivUserHeader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/system_header"
        android:layout_marginLeft="15dp"
        app:layout_goneMarginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_time"/>

    <ImageView
        android:id="@+id/ivChatTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_triangle_left"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@+id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/rect_corners_6dp_white_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="60dp"
        android:padding="9dp"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivChatTriangle">

        <ImageView
            android:id="@+id/ivFromUserHeader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/default_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvFromUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textColor="#cc333333"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="13dp"
            android:lines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/ivFromUserHeader"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvUserAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 喜欢 "
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/tvFromUserName"
            app:layout_constraintTop_toTopOf="@+id/tvFromUserName"
            app:layout_constraintBottom_toBottomOf="@+id/tvFromUserName"  />

        <TextView
            android:id="@+id/tvMyTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了我"
            android:textColor="#cc333333"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tvUserAction"
            app:layout_constraintTop_toTopOf="@+id/tvUserAction"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserAction" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
