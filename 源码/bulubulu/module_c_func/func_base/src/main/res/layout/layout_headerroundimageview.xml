<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/headerContainer"
    android:layout_width="40dp"
    android:layout_height="40dp">


    <ImageView
        android:id="@+id/ivHeaderImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/oval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_header_girl" />


    <View
        android:id="@+id/ivInviteOval"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_size40_stroke2_ffee9f"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivInviteImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_invite"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivHeaderImg"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintLeft_toLeftOf="@id/ivHeaderImg"
        app:layout_constraintWidth_percent="0.35"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>