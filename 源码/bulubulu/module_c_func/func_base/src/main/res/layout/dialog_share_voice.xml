<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dialog_round_black_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/share_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="分享海报"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_preview"
        android:background="@drawable/rect_black_alpha_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <LinearLayout
            android:id="@+id/layout_preview_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_bulu_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BULUBULU"
                android:textSize="13sp"
                android:textColor="#E6E6E6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/voice_edit_user_icon"
            app:layout_constraintTop_toBottomOf="@+id/layout_preview_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"
            android:scaleType="fitCenter"
            android:minHeight="172dp"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/voice_edit_user_name"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_user_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="用户名称"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/voice_edit_left_group"
            android:background="@drawable/round_shape_bg_alpha_12"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toLeftOf="@id/voice_edit_right_group"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_user_name"
            app:layout_goneMarginTop="15dp"
            android:layout_width="0dp"
            android:layout_height="135dp"/>
        <View
            android:id="@+id/voice_edit_right_group"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_user_name"
            app:layout_goneMarginTop="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintLeft_toRightOf="@id/voice_edit_left_group"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/round_shape_bg_alpha_12"
            android:layout_width="0dp"
            android:layout_height="135dp"/>
        <TextView
            android:id="@+id/voice_edit_timbre"
            android:text="阳光音"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toTopOf="@id/voice_edit_left_group"
            app:layout_constraintRight_toLeftOf="@id/voice_edit_play_state"
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <cn.kuwo.pp.util.IconFountTextView
            android:id="@+id/voice_edit_play_state"
            app:layout_constraintLeft_toRightOf="@id/voice_edit_timbre"
            app:layout_constraintRight_toRightOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toTopOf="@id/voice_edit_timbre"
            app:layout_constraintBottom_toBottomOf="@id/voice_edit_timbre"
            android:background="@drawable/circle_shape_bg"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/white_alpha_20"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="e6d3;"
            android:layout_width="27dp"
            android:layout_height="27dp" />
        <TextView
            android:id="@+id/voice_sex_force"
            android:text="异性引力"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_timbre"
            app:layout_constraintBottom_toTopOf="@id/voice_same_force"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorCommonHighlight"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/voice_same_force"
            android:text="同性引力"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toBottomOf="@id/voice_sex_force"
            app:layout_constraintBottom_toBottomOf="@id/voice_edit_left_group"
            android:textColor="@color/white_alpha_80"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/voice_sex_progress"
            app:layout_constraintLeft_toRightOf="@id/voice_sex_force"
            app:layout_constraintRight_toRightOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toTopOf="@id/voice_sex_force"
            app:layout_constraintBottom_toBottomOf="@id/voice_sex_force"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/force_progressbar"
            android:progressTint="@color/colorCommonHighlight"
            android:progress="30"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="5dp" />
        <ProgressBar
            android:id="@+id/voice_same_progress"
            app:layout_constraintLeft_toRightOf="@id/voice_same_force"
            app:layout_constraintRight_toRightOf="@id/voice_edit_left_group"
            app:layout_constraintTop_toTopOf="@id/voice_same_force"
            app:layout_constraintBottom_toBottomOf="@id/voice_same_force"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/force_progressbar"
            android:progressTint="#CCE9E9E9"
            android:progress="70"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="15dp"
            android:layout_width="0dp"
            android:layout_height="5dp" />
        <cn.kuwo.pp.util.CircleTextProgressbar
            android:id="@+id/voice_edit_score"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:textColor="@color/colorCommonHighlight"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.30"
            app:layout_constraintBottom_toBottomOf="@id/voice_edit_right_group"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_right_group"
            app:layout_constraintRight_toRightOf="@id/voice_edit_right_group"
            app:layout_constraintTop_toTopOf="@id/voice_edit_right_group" />
        <TextView
            android:text="音色评分"
            android:textSize="10sp"
            android:textColor="@color/white_alpha_80"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/voice_edit_right_group"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_score"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_right_group"
            app:layout_constraintRight_toRightOf="@id/voice_edit_right_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voice_result_group"
            app:layout_constraintLeft_toLeftOf="@id/voice_edit_left_group"
            app:layout_constraintRight_toRightOf="@id/voice_edit_right_group"
            app:layout_constraintTop_toBottomOf="@id/voice_edit_left_group"
            android:layout_marginTop="8dp"
            android:paddingBottom="15dp"
            android:background="@drawable/round_shape_bg_alpha_12"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/voice_edit_result"
                android:textSize="15sp"
                android:text="声音鉴定结果"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/voice_edit_result_content"
                app:layout_constraintLeft_toLeftOf="@+id/voice_edit_result"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/voice_edit_result"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="5dp"
                style="@style/TextView_SubTitle"
                android:textColor="@color/white_alpha_80"
                android:textSize="12sp"
                tools:text="大师傅大师傅但是广东萨格范德萨给的撒广东萨格的撒广东萨格的撒广东撒大师傅大师傅但是广东萨格范德萨给的撒广东萨格的撒广东萨格的撒广东撒大师傅大师傅但是广东萨格范德萨给的撒广东萨格的撒广东萨格的撒广东撒大师傅大师傅但是广东萨格范德萨给的撒广东萨格的撒广东萨格的撒广东撒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/voice_edit_match"
                style="@style/TextView_SubTitle"
                android:textSize="12sp"
                android:text="最佳匹配音色："
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="@+id/voice_edit_result"
                app:layout_constraintTop_toBottomOf="@id/voice_edit_result_content"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/voice_edit_match_content"
                app:layout_constraintTop_toTopOf="@id/voice_edit_match"
                app:layout_constraintBottom_toBottomOf="@id/voice_edit_match"
                app:layout_constraintLeft_toRightOf="@id/voice_edit_match"
                app:layout_constraintRight_toRightOf="parent"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/TextView_SubTitle"
                android:textSize="12sp"
                android:textColor="@color/white"
                tools:text="ewrwerw"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_grids"
        android:background="#38393B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="35dp"
        android:paddingBottom="30dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>