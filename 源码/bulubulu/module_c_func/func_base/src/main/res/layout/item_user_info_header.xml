<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/layout_headerroundimageview"
            android:id="@+id/anim_circle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvUserOnline"
            android:layout_width="27dp"
            android:layout_height="12dp"
            android:background="@drawable/button_corners_6dp_yellow_border"
            android:text="在线"
            android:textColor="@color/black_33"
            android:textSize="8sp"
            android:textAlignment="center"
            android:layout_marginTop="84dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="@+id/anim_circle"
            app:layout_constraintRight_toRightOf="@+id/anim_circle"
            app:layout_constraintTop_toTopOf="@+id/anim_circle" />

        <Button
            android:id="@+id/btnIntegral"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:minWidth="50dp"
            android:background="@drawable/button_corners_11dp_black_stroke"
            android:drawableLeft="@drawable/user_info_integral"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="14"
            android:layout_marginLeft="7dp"
            android:paddingLeft="7dp"
            android:paddingRight="8dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anim_circle"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_match_value"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anim_circle">

            <View
                android:id="@+id/view_match_bg"
                android:layout_width="106dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_corners_11dp_match_value_bg"
                app:layout_constraintLeft_toLeftOf="@+id/iv_match_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_match_progress"
                android:layout_width="66dp"
                android:layout_height="20dp"
                android:background="@drawable/view_match_user_gradient_value"
                app:layout_constraintLeft_toLeftOf="@+id/view_match_bg"
                app:layout_constraintTop_toTopOf="@+id/view_match_bg"
                app:layout_constraintBottom_toBottomOf="@+id/view_match_bg"/>

            <TextView
                android:id="@+id/tvMatchValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#373737"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="匹配度 97%"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/iv_match_value"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_match_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/match_value"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:maxWidth="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnIntegral"
            tools:text="黑厅乔威"/>

        <LinearLayout
            android:id="@+id/labelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName">

            <cn.kuwo.pp.util.AgeTagTextView
                android:id="@+id/tvAgeLabel"
                style="@style/TextView_Tag"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/tag_def_rounded_placeholder"
                android:textColor="@color/colorCommonHighlight"
                tools:text="e6d7;12"/>

            <TextView
                android:id="@+id/tvLocationLabel"
                style="@style/TextView_Tag"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/tag_def_rounded_placeholder"
                android:textColor="@color/white"
                tools:text="bulu星球"/>

            <TextView
                android:id="@+id/tvConstellationLabel"
                style="@style/TextView_Tag"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/tag_def_rounded_placeholder"
                android:textColor="@color/white"
                tools:text="天蝎座"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>