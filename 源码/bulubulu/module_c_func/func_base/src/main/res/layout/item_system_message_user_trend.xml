<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/chat_time_margin"
        android:paddingBottom="@dimen/chat_time_margin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorSubTitleColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivUserHeader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/system_header"
        android:layout_marginLeft="15dp"
        app:layout_goneMarginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_time"/>

    <ImageView
        android:id="@+id/ivChatTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chat_triangle_left"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@+id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/rect_corners_6dp_white_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="60dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivChatTriangle">

        <ImageView
            android:id="@+id/ivFromUserHeader"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/default_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvFromUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="#cc333333"
            android:textSize="16sp"
            android:layout_marginLeft="3.5dp"
            android:layout_marginRight="13dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@+id/ivFromUserHeader"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivFromUserHeader"
            app:layout_constraintBottom_toBottomOf="@+id/ivFromUserHeader" />

        <TextView
            android:id="@+id/tvUserAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="@+id/ivFromUserHeader"
            app:layout_constraintTop_toBottomOf="@+id/ivFromUserHeader" />

        <TextView
            android:id="@+id/tvMyTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了我的"
            android:textColor="#cc333333"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@+id/tvUserAction"
            app:layout_constraintTop_toTopOf="@+id/tvUserAction"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserAction" />

        <TextView
            android:id="@+id/tvMyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瞬间"
            android:textColor="#cc333333"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tvMyTip"
            app:layout_constraintTop_toTopOf="@+id/tvUserAction"
            app:layout_constraintBottom_toBottomOf="@+id/tvUserAction" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="ivFromUserHeader,tvFromUserName, tvUserAction, tvMyTip, tvMyContent" />

        <TextView
            android:id="@+id/tvOfflineTip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="Sorry，您的瞬间因为不可抗力被屏蔽了"
            android:textColor="#cc333333"
            android:textSize="16sp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCommentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:textColor="#99333333"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/viewSplit"
            app:layout_constraintRight_toRightOf="@+id/viewSplit"
            app:layout_constraintTop_toBottomOf="@+id/tvUserAction"/>

        <View
            android:id="@+id/viewSplit"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="13dp"
            android:background="#CDCDCD"
            app:layout_goneMarginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/ivFromUserHeader"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCommentText"/>

        <TextView
            android:id="@+id/tvTrendText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#99666666"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/viewSplit"
            app:layout_constraintRight_toRightOf="@+id/viewSplit"
            app:layout_constraintTop_toBottomOf="@+id/viewSplit"/>

        <ImageView
            android:id="@+id/ivTrendImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/viewSplit"
            app:layout_constraintTop_toBottomOf="@+id/tvTrendText"/>

        <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="22dp"
            android:layout_height="12dp"
            android:textColor="@color/black_33"
            android:textSize="9sp"
            android:textAlignment="center"
            android:background="@drawable/rect_corners_8dp_bg"
            app:layout_constraintRight_toRightOf="@+id/ivTrendImage"
            app:layout_constraintTop_toTopOf="@+id/ivTrendImage"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
