<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvUsers"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pk_result_height"
    android:layout_marginBottom="20dp"
    android:contentDescription="PK视图"
    app:cardBackgroundColor="@color/transparent"
    app:layout_constraintBottom_toTopOf="@id/userInfo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:parentTag="cn.kuwo.pp.view.ParallelPKView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <cn.kuwo.common.view.UseHeadImageLayout
            android:id="@+id/layoutAnswerOneUser"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <cn.kuwo.common.view.UseHeadImageLayout
            android:id="@+id/layoutAnswerTwoUser"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewNumberBg"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/view_corners_15dp_friend_test_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/layoutAnswerOneUser"
            app:layout_constraintRight_toLeftOf="@+id/layoutAnswerTwoUser"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewNumberCenter"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="@id/viewNumberBg"
            app:layout_constraintRight_toRightOf="@+id/viewNumberBg"
            app:layout_constraintTop_toTopOf="@+id/viewNumberBg" />

        <TextView
            android:id="@+id/tvGroupOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="100人"
            android:textColor="#FFE15C"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/viewNumberBg"
            app:layout_constraintLeft_toLeftOf="@+id/viewNumberBg"
            app:layout_constraintRight_toRightOf="@id/viewNumberCenter"
            app:layout_constraintTop_toTopOf="@+id/viewNumberBg" />

        <TextView
            android:id="@+id/tvGroupTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="100人"
            android:textColor="#CCD2D6"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/viewNumberBg"
            app:layout_constraintLeft_toLeftOf="@id/viewNumberCenter"
            app:layout_constraintRight_toRightOf="@+id/viewNumberBg"
            app:layout_constraintTop_toTopOf="@+id/viewNumberBg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivPKIivPKIconcon"
        android:layout_width="@dimen/pk_result_img_slide"
        android:layout_height="@dimen/pk_result_img_slide"
        android:layout_gravity="center"
        android:src="@drawable/friend_test_pk" />

</merge>