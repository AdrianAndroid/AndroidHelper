<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="40dp"
        android:layout_height="90dp"
        android:background="@drawable/rect_corners_20dp_while_alpha10"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        layout="@layout/layout_headerroundimageview"
        android:id="@+id/ivUserHeader"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名字"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/ivUserHeader"
        app:layout_constraintTop_toTopOf="@+id/ivUserHeader" />

    <Button
        android:layout_width="37dp"
        android:layout_height="18dp"
        android:background="@drawable/button_corners_9dp_white_alpha30"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:text="喜欢我"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/tvUserName"
        app:layout_constraintTop_toTopOf="@+id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tvPublishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布时间"
        android:textColor="@color/white_alpha_30"
        android:textStyle="normal"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvUserName"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader" />

    <ImageView
        android:id="@+id/ivFavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/trend_favor_user"
        app:layout_constraintRight_toRightOf="@+id/ivUserHeader"
        app:layout_constraintLeft_toLeftOf="@+id/ivUserHeader"
        app:layout_constraintTop_toBottomOf="@+id/ivUserHeader" />

    <com.koudai.styletextview.RichTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvPublishTime"
        app:layout_constraintLeft_toLeftOf="@+id/tvPublishTime"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:maxWidth="300dp"
        android:text="标题"
        android:textColor="@color/white_alpha_60"
        android:textStyle="bold"
        android:textSize="15dp"
        android:ellipsize="end"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="70.5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/transparent"
        app:layout_constraintDimensionRatio="h,280.5:234"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,140.25:234"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/viewOptionOneBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvOptionOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#413408"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="4"/>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/viewAnswerOnePercent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerOnePercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerOnePercent">

                        <TextView
                            android:id="@+id/tvAnswerOnePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="24sp"/>

                        <ImageView
                            android:id="@+id/ivAnswerOneCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutContentTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="w,140.25:234"
                app:layout_constraintLeft_toRightOf="@id/layoutContentOne"
                app:layout_constraintTop_toTopOf="@id/layoutContentOne">

                <RelativeLayout
                    android:id="@+id/viewOptionTwoBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvOptionTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#051D2E"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:ellipsize="end"
                        android:maxLines="4"/>

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/viewAnswerTwoPercent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintRight_toRightOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintBottom_toBottomOf="@+id/viewAnswerTwoPercent"
                        app:layout_constraintTop_toTopOf="@+id/viewAnswerTwoPercent">

                        <TextView
                            android:id="@+id/tvAnswerTwoPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="24sp"/>

                        <ImageView
                            android:id="@+id/ivAnswerTwoCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/oval"
                            android:src="@drawable/finish_icon"
                            android:visibility="gone"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>>

    <ImageView
        android:id="@+id/ivPraise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_praise"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewContent" />

    <TextView
        android:id="@+id/tvCommentCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white_alpha_30"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toLeftOf="@+id/ivPraise"
        app:layout_constraintTop_toTopOf="@+id/ivPraise"
        app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon_comment"
        app:layout_constraintRight_toLeftOf="@+id/tvCommentCount"
        app:layout_constraintTop_toTopOf="@+id/ivPraise"
        app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:src="@drawable/icon_share"
        app:layout_constraintRight_toLeftOf="@+id/ivComment"
        app:layout_constraintTop_toTopOf="@+id/ivComment"
        app:layout_constraintBottom_toBottomOf="@+id/ivComment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white_alpha_10"
        android:layout_marginLeft="70.5dp"
        android:layout_marginTop="18.5dp"
        app:layout_constraintTop_toBottomOf="@+id/ivPraise" />
</androidx.constraintlayout.widget.ConstraintLayout>
