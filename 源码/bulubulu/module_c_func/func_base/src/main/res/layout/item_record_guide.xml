<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="238dp"
    android:backgroundTint="@color/colorGuideItemBg"
    android:background="@drawable/round_shape_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/item_guide_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#622C05"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View android:background="#E0DA9A"
          android:id="@+id/item_guide_split"
          app:layout_constraintTop_toBottomOf="@id/item_guide_title"
          app:layout_constraintBottom_toTopOf="@id/item_guide_content"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="13dp"/>
    <TextView
        android:id="@+id/item_guide_content"
        app:layout_constraintTop_toBottomOf="@id/item_guide_split"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:lineSpacingExtra="3dp"
        android:textSize="16sp"
        android:textColor="#622C05"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E0DA9A"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:translationZ="2dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>