<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edVoteTitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="@dimen/publish_vote_edittext_margintop"
        android:layout_marginRight="25dp"
        android:background="@drawable/rect_corners_6dp_edit_text_bg"
        android:gravity="center"
        android:hint="请输入投票标题"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textColorHint="@color/white_alpha_50"
        android:textCursorDrawable="@drawable/edit_text_cursor_white_drawable"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOptionOneBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="5dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="14dp"
        app:layout_constraintDimensionRatio="h,157.5:263"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@+id/edVoteTitle">

        <RelativeLayout
            android:id="@+id/viewOptionOneBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/view_text_question_gradient_bg_one">

            <EditText
                android:id="@+id/edOptionOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="点击输入选项"
                android:maxLines="5"
                android:textColor="#413408"
                android:textColorHint="#413408"
                android:textCursorDrawable="@drawable/edit_text_cursor_white_drawable"
                android:textSize="20sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewOptionTwoBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="14dp"
        app:layout_constraintDimensionRatio="h,157.5:263"
        app:layout_constraintLeft_toRightOf="@+id/guidelineCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edVoteTitle">

        <RelativeLayout
            android:id="@+id/viewOptionTwoBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/view_text_question_gradient_bg_two">

            <EditText
                android:id="@+id/edOptionTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:background="@color/transparent"
                android:gravity="center_vertical"
                android:hint="点击输入选项"
                android:maxLines="5"
                android:textColor="#051D2E"
                android:textColorHint="#051D2E"
                android:textCursorDrawable="@drawable/edit_text_cursor_white_drawable"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
