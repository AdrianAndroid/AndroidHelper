<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBalls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <cn.kuwo.pp.ui.discover.view.CenterBalloonView
        android:id="@+id/ballUserCurrent"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/ivGuideLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_friend_guide_like"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"/>

    <ImageView
        android:id="@+id/ivGuideUnlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_friend_guide_unlike"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_heart_scale"
        android:visibility="gone"
        app:lottie_fileName="like_user_heart.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="@id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@id/ballUserCurrent"
        app:layout_constraintRight_toRightOf="@id/ballUserCurrent"
        app:layout_constraintLeft_toLeftOf="@id/ballUserCurrent"
        android:layout_width="360dp"
        android:layout_height="225dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_balloon_up"
        android:visibility="gone"
        app:lottie_fileName="like_user_balloon_up.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:layout_constraintBottom_toTopOf="@+id/guidelineTop"
        app:layout_constraintLeft_toLeftOf="@id/ballUserCurrent"
        android:layout_width="200dp"
        android:layout_height="150dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_match_both"
        android:visibility="gone"
        app:lottie_fileName="like_user_both.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:layout_constraintTop_toTopOf="@id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@id/ballUserCurrent"
        app:layout_constraintRight_toRightOf="@id/ballUserCurrent"
        app:layout_constraintLeft_toLeftOf="@id/ballUserCurrent"
        android:layout_width="440dp"
        android:layout_height="280dp" />

    <cn.kuwo.pp.ui.discover.view.BalloonView
        android:id="@+id/ballUserOne"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="@+id/ballUserCurrent"
        app:layout_constraintTop_toTopOf="@+id/ballUserCurrent"
        app:layout_constraintCircle="@+id/ballUserCurrent"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="200dp"/>

    <cn.kuwo.pp.ui.discover.view.BalloonView
        android:id="@+id/ballUserTwo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"
        app:layout_constraintCircle="@+id/ballUserCurrent"
        app:layout_constraintCircleAngle="145"
        app:layout_constraintCircleRadius="195dp"/>

    <cn.kuwo.pp.ui.discover.view.BalloonView
        android:id="@+id/ballUserThree"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"
        app:layout_constraintCircle="@+id/ballUserCurrent"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="220dp"/>

    <cn.kuwo.pp.ui.discover.view.BalloonView
        android:id="@+id/ballUserFour"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"
        app:layout_constraintCircle="@+id/ballUserCurrent"
        app:layout_constraintCircleAngle="215"
        app:layout_constraintCircleRadius="190dp"/>

    <cn.kuwo.pp.ui.discover.view.BalloonView
        android:id="@+id/ballUserFive"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintRight_toRightOf="@+id/ballUserCurrent"
        app:layout_constraintBottom_toBottomOf="@+id/ballUserCurrent"
        app:layout_constraintCircle="@+id/ballUserCurrent"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="200dp"/>

    <cn.kuwo.common.view.MultipleStatusView
        android:id="@+id/multipleStatusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
