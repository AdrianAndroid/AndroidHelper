<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_33"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/rect_corners_8dp_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintDimensionRatio="335:128"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTopicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="#我穿西装A到爆"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_challenge"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tvTopicTitle"
            app:layout_constraintLeft_toLeftOf="@+id/tvTopicTitle"/>

        <ImageView
            android:id="@+id/ivUser1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTopicTitle"
            app:layout_constraintLeft_toLeftOf="@+id/tvTopicTitle"/>

        <ImageView
            android:id="@+id/ivUser2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/ivUser1"
            app:layout_constraintBottom_toBottomOf="@+id/ivUser1"
            app:layout_constraintLeft_toLeftOf="@+id/ivUser1"/>

        <ImageView
            android:id="@+id/ivUser3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="@+id/ivUser2"
            app:layout_constraintBottom_toBottomOf="@+id/ivUser2"
            app:layout_constraintLeft_toLeftOf="@+id/ivUser2"/>

        <TextView
            android:id="@+id/tvNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="100人参与"
            app:layout_constraintLeft_toRightOf="@+id/ivUser2"
            app:layout_constraintTop_toTopOf="@+id/ivUser2"
            app:layout_constraintBottom_toBottomOf="@+id/ivUser2"/>

        <ImageView
            android:id="@+id/ivTopicStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/topic_start"
            android:layout_marginRight="27.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>