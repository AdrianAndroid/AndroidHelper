<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/friend_list_item_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/ivUserImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="头像"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSystemIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_system"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserImage"
        app:layout_constraintRight_toRightOf="@+id/ivUserImage"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/voice_play_btn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/voice_play"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/ivUserImage"
        app:layout_constraintTop_toTopOf="@id/ivUserImage"
        tools:text="坏小孩叨叨" />

    <TextView
        android:id="@+id/tvMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_alpha_30"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        tools:text="9:10" />

    <TextView
        android:id="@+id/tvLastMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white_alpha_60"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/tvUserName"
        app:layout_constraintRight_toRightOf="@+id/tvMsgTime"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        tools:text="lastmsg" />


    <TextView
        android:id="@+id/tvUnReadNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="6dp"
        android:padding="5dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@id/tvMsgTime"
        app:layout_constraintTop_toBottomOf="@id/tvMsgTime" />

</androidx.constraintlayout.widget.ConstraintLayout>