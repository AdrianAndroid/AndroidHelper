<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_round_black_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="667dp"
    android:maxHeight="791dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/share_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="分享海报"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_preview"
        android:background="@drawable/rect_black_alpha_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <LinearLayout
            android:id="@+id/layout_preview_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_bulu_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BULUBULU"
                android:textSize="13sp"
                android:textColor="#E6E6E6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_preview_top"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="end" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintDimensionRatio="h,375:333"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutCardContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutContentOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="w,187.5:333"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:id="@+id/viewOptionOneBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvOptionOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#413408"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:maxLines="4"/>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivOptionOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:id="@+id/viewAnswerOnePercent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:layout_constraintLeft_toLeftOf="@+id/viewAnswerOnePercent"
                            app:layout_constraintRight_toRightOf="@+id/viewAnswerOnePercent"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAnswerOnePercent"
                            app:layout_constraintTop_toTopOf="@+id/viewAnswerOnePercent">

                            <TextView
                                android:id="@+id/tvAnswerOnePercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="24sp"/>

                            <ImageView
                                android:id="@+id/ivAnswerOneCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/oval"
                                android:src="@drawable/finish_icon"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutContentTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintDimensionRatio="w,187.5:333"
                    app:layout_constraintLeft_toRightOf="@id/layoutContentOne"
                    app:layout_constraintTop_toTopOf="@id/layoutContentOne">

                    <RelativeLayout
                        android:id="@+id/viewOptionTwoBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tvOptionTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#051D2E"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:ellipsize="end"
                            android:maxLines="4"/>

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivOptionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <FrameLayout
                        android:id="@+id/viewAnswerTwoPercent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintHeight_percent="0"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center"
                            app:layout_constraintLeft_toLeftOf="@+id/viewAnswerTwoPercent"
                            app:layout_constraintRight_toRightOf="@+id/viewAnswerTwoPercent"
                            app:layout_constraintBottom_toBottomOf="@+id/viewAnswerTwoPercent"
                            app:layout_constraintTop_toTopOf="@+id/viewAnswerTwoPercent">

                            <TextView
                                android:id="@+id/tvAnswerTwoPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="24sp"/>

                            <ImageView
                                android:id="@+id/ivAnswerTwoCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/oval"
                                android:src="@drawable/finish_icon"
                                android:visibility="gone"/>

                        </LinearLayout>

                    </FrameLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/ivSkip"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="8.5dp"
                    android:layout_marginTop="8.5dp"
                    android:src="@drawable/skip_icon"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/viewCardGuideLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/transparent"
            android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cardViewContent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintLeft_toLeftOf="@+id/cardViewContent"
            app:layout_constraintRight_toRightOf="@+id/cardViewContent"
            app:layout_constraintTop_toBottomOf="@+id/viewCardGuideLine">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <cn.kuwo.common.view.UseHeadImageLayout
                    android:id="@+id/layoutAnswerOneUser"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <cn.kuwo.common.view.UseHeadImageLayout
                    android:id="@+id/layoutAnswerTwoUser"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/viewNumberBg"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:background="@drawable/view_corners_15dp_friend_test_bg"
                    app:layout_constraintLeft_toRightOf="@+id/layoutAnswerOneUser"
                    app:layout_constraintRight_toLeftOf="@+id/layoutAnswerTwoUser"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/viewNumberCenter"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintLeft_toLeftOf="@id/viewNumberBg"
                    app:layout_constraintRight_toRightOf="@+id/viewNumberBg"
                    app:layout_constraintTop_toTopOf="@+id/viewNumberBg" />

                <TextView
                    android:id="@+id/tvGroupOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100人"
                    android:textColor="#FFE15C"
                    android:textSize="15sp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintLeft_toLeftOf="@+id/viewNumberBg"
                    app:layout_constraintRight_toRightOf="@id/viewNumberCenter"
                    app:layout_constraintTop_toTopOf="@+id/viewNumberBg"
                    app:layout_constraintBottom_toBottomOf="@id/viewNumberBg"/>

                <TextView
                    android:id="@+id/tvGroupTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100人"
                    android:textColor="#CCD2D6"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/viewNumberCenter"
                    app:layout_constraintRight_toRightOf="@+id/viewNumberBg"
                    app:layout_constraintTop_toTopOf="@+id/viewNumberBg"
                    app:layout_constraintBottom_toBottomOf="@id/viewNumberBg"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/ivPKIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/friend_test_pk"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ivUserHeader"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/oval"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewContent"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="用户名字"
            android:textColor="@color/white_alpha_50"
            android:textSize="10sp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            app:layout_constraintLeft_toRightOf="@id/ivUserHeader"
            app:layout_constraintRight_toLeftOf="@+id/ivShare"
            app:layout_constraintBottom_toBottomOf="@id/ivUserHeader"
            app:layout_constraintTop_toTopOf="@+id/ivUserHeader"/>

        <ImageView
            android:id="@+id/ivPraise"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/question_prise"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivUserHeader"
            app:layout_constraintBottom_toBottomOf="@+id/ivUserHeader"/>

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/question_danmu"
            app:layout_constraintRight_toLeftOf="@+id/ivPraise"
            app:layout_constraintTop_toTopOf="@+id/ivPraise"
            app:layout_constraintBottom_toBottomOf="@+id/ivPraise" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/question_share"
            app:layout_constraintRight_toLeftOf="@+id/ivComment"
            app:layout_constraintTop_toTopOf="@+id/ivComment"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment" />

        <ImageView
            android:id="@+id/ivMatch"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/friend_test_match"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivShare"/>

        <cn.kuwo.pp.ui.discover.view.PolygonProgressView
            android:id="@+id/viewAnswerProgress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivMatch"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivMatch"
            app:layout_constraintVertical_bias="0.527" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_grids"
            android:background="#38393B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="35dp"
            android:paddingBottom="30dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>